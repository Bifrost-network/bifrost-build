#!/bin/bash

PKG=minidlna
BINDIR=/opt/minidlna/sbin

case "$1" in
    start)
        printf "\nstarting: $PKG"
        $BINDIR/minidlna -f /opt/minidlna/etc/minidlna.conf
        ;;
    stop)
        printf "\nstopping: $PKG"
	killall minidlna
        ;;
    *)
        printf "\n\tUsage: $0 < start | stop >\n\n"
        ;;
esac

